@page
@model SimpleLoginAssignment.Pages.IndexModel
@{
    ViewData["Title"] = "Index";
}


<form method="post" asp-page="Index" style="margin-top:30px; margin-left:30rem; margin-right:40rem; height:40rem; width:50rem; background-color:rebeccapurple; box-sizing:border-box; border-radius:10px;">
    <div style="background-color:rebeccapurple;
                    font-size:16px;
                    padding-left:15rem;
                    padding-top:9rem;
                    border-radius:10px;
                    ">
        <div style="height:25rem; width:20rem; box-sizing:border-box;

                    box-shadow:rgba(0,0,0,4) 10px 10px initial;
                    background-color:aqua;">
            <table>

                <tr>
                    <td><h2>Login Form</h2></td>
                </tr>
                <tr>
                    <td>Username: </td>
                    <td>
                        <input type="text" asp-for="@Model.Username" style="        width: 100%;
        height: 40px;
        padding: 5px;
        margin-bottom: 25px;
        margin-top: 5px;
        border: 2px solid #ccc;
        color: #4f4f4f;
        font-size: 16px;
        border-radius: 5px;" />
                    </td>
                </tr>
                <tr>
                    <td>Password: </td>
                    <td>
                        <input type="password" asp-for="@Model.Password" style="        width: 100%;
        height: 40px;
        padding: 5px;
        margin-bottom: 25px;
        margin-top: 5px;
        border: 2px solid #ccc;
        color: #4f4f4f;
        font-size: 16px;
        border-radius: 5px;" />
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>
                        <input type="submit" value="Login" style="        font-size: 16px;
        background: linear-gradient(#ffbc00 5%, #ffdd7f 100%);
        border: 1px solid #e5a900;
        color: #4E4D4B;
        font-weight: bold;
        cursor: pointer;
        width: 100%;
        border-radius: 5px;
        padding: 10px 0;
        outline: none;
        background: linear-gradient(#ffdd7f 5%, #ffbc00 100%);
    }" />
                    </td>
                </tr>
            </table>
            @Model.Msg
        </div>
    </div>

</form>



